<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.visualnovel">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.VisualNovel">
        <activity android:name=".EndActivity">
            <intent-filter>
                <action android:name="android.intent.action.storyEnd" />

                <category android:name="android.intent.category.DEFAULT " />
            </intent-filter>
        </activity>
        <activity android:name=".StoryActivity">
            <intent-filter>
                <action android:name="android.intent.action.story" />

                <category android:name="android.intent.category.DEFAULT " />
            </intent-filter>
        </activity>
        <activity android:name=".NameActivity">
            <intent-filter>
                <action android:name="android.intent.action.nameUser" />

                <category android:name="android.intent.category.DEFAULT " />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>